# Root EditorConfig file
root = true

# General settings (apply to all files)
[*]
charset = utf-8               # Enforce UTF-8 encoding
indent_style = space          # Use spaces for indentation
indent_size = 2               # Indentation level is 2 spaces
end_of_line = lf              # Use LF line endings (Unix-style)
trim_trailing_whitespace = true  # Remove trailing whitespaces
insert_final_newline = true      # Ensure a newline at the end of every file

# Markdown files
[*.md]
max_line_length = off         # Disable line length restrictions for Markdown
trim_trailing_whitespace = false  # Allow trailing spaces (for Markdown readability)

# JSON files
[*.json]
indent_style = space
indent_size = 2               # JSON uses 2-space indentation per standard

# YAML files
[*.yml]
indent_style = space
indent_size = 2

# PHP files (Backend - Laravel)
[*.php]
indent_style = space
indent_size = 2

# SCSS and CSS files
[*.{scss,css}]
indent_style = space
indent_size = 2

# TypeScript files (Frontend - Angular)
[*.ts]
indent_style = space
indent_size = 2

# JavaScript files
[*.js]
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2